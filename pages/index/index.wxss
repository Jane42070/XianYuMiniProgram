swiper {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 100%;
	height: 380rpx;
}
swiper-item {
	/* color: var(--themeColor); */
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 0 30rpx 0;
}

swiper-item image {
	width: 690rpx;
	height: 350rpx;
	border-radius: 40rpx;
	box-shadow: 0 0 10rpx 2rpx rgba(0, 0, 0, 0.5);
}

.category {
	display: flex;
	justify-content: space-around;
	align-items: center;
	width: 650rpx;
	border-radius: 20rpx;
	margin: 30rpx 45rpx 0;
	padding: 15rpx 0;
	box-shadow: 0 0 10rpx 2rpx rgba(0, 0, 0, 0.5);
}

navigator {
	display: flex;
	align-items: center;
	height: 100rpx;
	flex-direction: column;
}

navigator text {
	font-size: 20rpx;
}

.category navigator image {
	width: 100%;
}
